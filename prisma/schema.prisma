// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  role          String    @default("USER") // 'USER' or 'ADMIN'
  lastLoginAt   DateTime?
  lastActiveAt  DateTime?
  createdAt     DateTime      @default(now())
  assets              Asset[]
  stockEntries        StockEntry[]
  predefinedAccounts  PredefinedAccount[]
  dividendRecords     DividendRecord[]
}

model Asset {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  assetType         String    // e.g., 'gold', 'usd', 'krw', 'stock'
  assetSymbol       String?   // Ticker symbol (e.g., 'AAPL', 'TSLA') for stocks
  amountEncrypted   String    // AES-256 encrypted balance/shares string
  avgPriceEncrypted String?   // AES-256 encrypted average acquisition price (for stocks)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@unique([userId, assetType, assetSymbol]) // Ensure uniqueness per user+type+symbol
}

model StockEntry {
  id                  String    @id @default(cuid())
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  brokerName          String    // e.g., 'Toss', 'Kiwoom'
  accountOwner        String    // e.g., 'Hong Gildong'
  accountNumber       String?   // Optional: Account identifier
  tickerSymbol        String    // e.g., 'AAPL', 'TSLA'
  currency            String    @default("USD") // 'USD' or 'KRW'
  
  predefinedAccountId String?
  predefinedAccount   PredefinedAccount? @relation(fields: [predefinedAccountId], references: [id], onDelete: SetNull)

  // Storing quantities and amounts as strings if using AES encryption like Asset model, 
  // or simple Floats if encryption isn't strict for this granular level. 
  // Given the existing `Asset` uses `amountEncrypted`, we will follow the encrypted pattern or use plain floats for easier calculation.
  // For the sake of real-time calculations without heavy decryption overhead per row, we'll store them as Float here.
  // If the user wants strict encryption, we can change it to String.
  quantity            Float
  totalPurchaseAmount Float

  // Dividend projection fields
  dividendPerShare    Float?
  dividendFrequency   Int?    // e.g., 1, 2, 4, 12
  dividendMonths      String? // e.g., "1,4,7,10"

  dividendRecords     DividendRecord[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  @@index([userId, tickerSymbol])
}

model DividendRecord {
  id             String      @id @default(cuid())
  userId         String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tickerSymbol   String
  amount         Float
  currency       String
  receivedAt     DateTime
  taxAmount      Float?
  
  stockEntryId   String?
  stockEntry     StockEntry? @relation(fields: [stockEntryId], references: [id], onDelete: SetNull)
  
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([userId, tickerSymbol])
}

model PredefinedAccount {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  alias         String    // e.g., 'Main Trading', 'Retirement'
  broker        String    // e.g., 'Toss', 'Kiwoom'
  accountNumber String    // e.g., '123-456-***'
  owner         String    // e.g., 'Hong Gildong'
  
  stockEntries  StockEntry[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}
